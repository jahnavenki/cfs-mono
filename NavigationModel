    public final void setPlatformButtonLink(String platformButtonLink) {
        this.platformButtonLink = platformButtonLink;
    }

    public final String getHomePagePath(String currentPagePath) {
        String path = "";
        if (null != this.adviserPlatformLink
                && currentPagePath.startsWith(adviserPlatformLink)) {
            path = adviserPlatformLink;
        } else if (null != adviserInvestorLink
                && currentPagePath.startsWith(adviserInvestorLink)) {
            path = adviserInvestorLink;
        } else if (null != employerLink
                && currentPagePath.startsWith(employerLink)) {
            path = employerLink;
        } else if (null != aboutusLink
                && currentPagePath.startsWith(aboutusLink)) {
            path = aboutusLink;
        } else if (null != personalLink) {
            path = personalLink;
        }
        return path;

    }

    public final String getHomePage(String currentPagePath) {
        String homePage = "";
        if (null != this.adviserPlatformLink
                && currentPagePath.startsWith(adviserPlatformLink)) {
            homePage = GenericConstants.PLATFORMS_HOME;
        } else if (null != adviserInvestorLink
                && currentPagePath.startsWith(adviserInvestorLink)) {
            homePage = GenericConstants.INVESTMENTS_HOME;
        } else if (null != employerLink
                && currentPagePath.startsWith(employerLink)) {
            homePage = GenericConstants.EMPLOYER_HOME;
        } else if (null != aboutusLink
                && currentPagePath.startsWith(aboutusLink)) {
            homePage = GenericConstants.ABOUTUS_HOME;
        } else if (null != personalLink) {
            homePage = GenericConstants.PERSONAL_HOME;
        }
        return homePage;

    }

    public final String getInvestButtonLabel() {
        return investButtonLabel;
    }

    public final String getPlatformButtonName() {
        return platformButtonName;
    }

    public final String getPersonalLinkName() {
        return personalLinkName;
    }
}
